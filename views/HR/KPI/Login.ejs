<!DOCTYPE html>
<html lang="en" dir="ltr">
    <header>
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <!-- <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-purple.min.css"> -->
        <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.purple-indigo.min.css" />
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
        <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/JS/getmdl/getmdl-select.min.css"/>
        <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
        <script defer src="/JS/getmdl/getmdl-select.min.js"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <title>KPI</title>
    </header>
    <body style="background-image: url('../Image/3.jpg');">
        <main class="mdl-layout__content" style="width: 100%;">
            <div class="page-content" style="width: 100%;">
                <div class="mdl-grid" style="width: 100%;">
                    <div class="mdl-card mdl-shadow--4dp" style="width: 400px; margin: 10px auto; margin-top: 100px; border-radius: 10px;">
                        <div class="mdl-card__title" style="background-color: green; color:white;">
                            <h2 class="mdl-card__title-text">ĐÁNH GIÁ KẾT QUẢ KPI</h2>
                        </div>
                        <div class="mdl-card__supporting-text">
                            <div id="div_cbb_role" class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height" 
                                style="height: 200px; margin-left: 10px;">
                                <input type="text" value="" class="mdl-textfield__input" id="cbb_role"  style="color:black" readonly>
                                <input type="hidden" value="" name="cbb_role">
                                <label for="cbb_role" class="mdl-textfield__label">Bạn là...</label>
                                <ul for="cbb_role" class="mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-shadow--8dp" id="list_cbb_role">
                                    <li class="mdl-menu__item">Nhân viên</li>
                                    <li class="mdl-menu__item">Người quản lý</li>
                                    <li class="mdl-menu__item">Lấy kết quả đánh giá</li>
                                </ul>
                            </div>
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" 
                            style="background-color: red; color: white; float: right; border-radius: 20px; margin-right: 20px;" id="btn_login">
                                ĐỒNG Ý
                                <i class="material-icons">east</i>
                            </button>
                        </div>
                        <!-- <div class="mdl-card__menu">
                            <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                                <i class="material-icons">share</i>
                            </button>
                        </div> -->
                    </div>
                </div>
                
            </div>
        </main>
    </body>
    <script>
        document.getElementById('btn_login').addEventListener('click', function(){
            role=document.getElementById('cbb_role').value;
            a=document.createElement('a')
            switch (role){
                case 'Nhân viên':
                    a.setAttribute('href', 'http://pbvweb01v/KPI/Self_Evaluate');
                    break;
                case 'Người quản lý':
                    a.setAttribute('href', 'http://pbvweb01v/KPI/Sup_Evaluate');
                    break;
                case 'Lấy kết quả đánh giá':
                    a.setAttribute('href', 'http://pbvweb01v/KPI/Report');
                    break;
                default:
                    alert('Bạn là ai?');
                    document.getElementById('cbb_role').focus();
            }
            a.click();
        })
    </script>
</html>
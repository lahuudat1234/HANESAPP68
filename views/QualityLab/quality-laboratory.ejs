                <div class="row" style="width: 100%;">
                    <div class="col d-flex">
                        <button class="btn btn-danger ml-auto" id="btn_export">Xuất báo cáo</button>
                    </div>
                </div>

                <div class="modal" id="export_download" tabindex="-1" role="dialog">
                    <style>
                        .modal-md {
                            max-width: fit-content;
                        }
                    </style>
                    <div class="modal-dialog modal-md" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-primary">
                                <h2 class="modal-title">Xuất dữ liệu báo cáo</h2>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row d-flex justify-content-center">
                                    <div class="loader loader-danger" id="div_loader"></div>
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        <label for="dateFrom">Từ ngày</label>
                                        <input type="date" class="form-control" id="dateFrom" name="dateFrom">
                                    </div>
                                    <div class="form-group">
                                        <label for="dateTo">Đến ngày</label>
                                        <input type="date" class="form-control" id="dateTo" name="dateTo">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txt_location">Chọn khu vực</label>
                                    <select class="form-control input-square" id="txt_location">
                                        <option value="All">Tất cả</option>
                                        <option value="PB1">PB1 Laboratory</option>
                                        <option value="PB2">PB2 Laboratory</option>
                                        <option value="PB3">PB3 Laboratory</option>
                                    </select>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="btn_download">Tải xuống</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="temp_chart" tabindex="-1" role="dialog" aria-hidden="true">
                    <style>
                        .modal-lg {
                            max-width: 60%;
                        }
                    </style>
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-primary">
                                <h2 class="modal-title" id="txt_show_dialog">
                                    Thông tin nhiệt độ và độ ẩm
                                </h2>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row row-demo-grid">
                                    <div class="col-md-6">
                                        <div class="chart-container">
                                            <canvas id="getTempChart"></canvas>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="chart-container">
                                            <canvas id="getHumpChart"></canvas>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- Custom template | don't include it in your project! -->

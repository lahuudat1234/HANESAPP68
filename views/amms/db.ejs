            function chart_area_data(){
                var xhttp = new XMLHttpRequest();
                event.preventDefault(); //prevent default action 
                xhttp.onreadystatechange = function() {
                if (this.readyState == 4 && this.status == 200) {
                        var res_result=this.responseText
                        if (res_result=="err"){
                        swal("system notification!","system error!\nPlease try again later", "error");
                        } 
                        else{
                        if (res_result=="zero"){
                            swal("system notification!","don't have available inventory", "success");
                            $('#datatablesSimple tbody').html('')
                        }else{
                            ls=JSON.parse(res_result)
                            console.log(ls)
                                if (ls.length>0){
                                    const week_array = [];
                                    const active_array=[];
                                    const inactive_array=[];
                                    const disposal_array=[]
                                    for (i=0;i<ls.length;i++){
                                        week_array.push(("W"+ls[i].week))
                                        active_array.push(ls[i].ac)
                                        inactive_array.push(ls[i].ina)
                                        disposal_array.push(ls[i].di)
                                    }
                                    chart_area("myAreaChart",week_array,active_array,inactive_array)
                                    chart_bar("myBarChart",week_array,disposal_array)
                                // document.getElementById("qty_tt").innerText=ac_value

                                }
                                else{
                                    swal("system notification!","Cannot reach dash board database", "error");
                                }  
                        }
                        }

                    }
                };
                xhttp.open("post",'/AM/get_chart_area', true);
                // var id= document.getElementById("idreq").value;
                // send data jason
                xhttp.setRequestHeader("Content-type", "application/json");
                data_send = {
                    pl: "pl",
                    mc:"mc"
                };
                xhttp.send(JSON.stringify(data_send));
            }


            function table_load() {
                var xhttp = new XMLHttpRequest();
                event.preventDefault(); //prevent default action 

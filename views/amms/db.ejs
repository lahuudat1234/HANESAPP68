                            console.log(ls)
                                if (ls.length>0){
                                var ttdt=""
                                for (i=0;i<ls.length;i++){    
                                    ttdt+='<tr><td >'+ ls[i].year +'</td><td>'+ls[i].month+'</td><td >' +  ls[i].week + '</td><td >'+ ls[i].plant_cd 
                                    ttdt+= '</td><td >'+ls[i].company+'</td><td>'+ ls[i].total_inv 
                                    ttdt+= '</td><td >' + ls[i].automation+'</td><td >'+ls[i].Active_mc+'</td><td>'+ ls[i].in_active 
                                    ttdt+= '</td><td >' + ls[i].good+'</td><td >'+ls[i].failed+'</td><td>'+ ls[i].poor 
                                    ttdt+= '</td><td>'+ls[i].disposal+'</td></tr>';
                                }
                                $('#datatablesSimple tbody').html(ttdt)
                                const datatablesSimple = document.getElementById('datatablesSimple');
                                if (datatablesSimple) {
                                    new simpleDatatables.DataTable(datatablesSimple);
                                }
                                // document.getElementById("qty_tt").innerText=ac_value

                                }
                                else{
                                    swal("system notification!","Cannot reach dash board database", "error");
                                }  
                        }
                        }

                    }
                };
                xhttp.open("post",'/AM/get_dashboard', true);
                // var id= document.getElementById("idreq").value;
